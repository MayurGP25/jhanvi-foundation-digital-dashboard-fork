<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Match Beneficiaries</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body { background: radial-gradient(circle at top left, #e3f2fd, #f5f7fb); min-height: 100vh; }
    .app-header { backdrop-filter: blur(8px); background: rgba(15, 23, 42, 0.92); }
    .surface { border: none; border-radius: 18px; box-shadow: 0 18px 40px rgba(15, 23, 42, 0.12); }
    .btn-pill { border-radius: 999px; }
    .summary-card {
      border: none; border-radius: 18px;
      background: linear-gradient(135deg, rgba(15,23,42,0.95), rgba(31,41,55,0.95));
      color: #e5e7eb;
      box-shadow: 0 22px 55px rgba(15,23,42,0.35);
    }
    .summary-pill {
      display: inline-flex; gap: .4rem; align-items: center;
      padding: .25rem .7rem; border-radius: 999px;
      background: rgba(255,255,255,0.08);
      border: 1px solid rgba(148,163,184,0.25);
      font-size: .8rem;
    }
    .table thead th { border-bottom: none; }
    .table-hover tbody tr:hover { background: #f2f5ff; }
    .section-title { font-weight: 700; }
    .form-control { border-radius: 12px; }
    .form-label { font-size: .8rem; color: #6c757d; margin-bottom: .25rem; }
  </style>
</head>

<body>
  <nav class="navbar navbar-dark app-header shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-semibold" href="/dashboard">NGO Digital Dashboard</a>
      <div class="d-flex gap-2">
        <a href="/jobmatching" class="btn btn-outline-light btn-sm btn-pill">Back to Jobs</a>
        <a href="/logout" class="btn btn-outline-light btn-sm btn-pill">Sign Out</a>
      </div>
    </div>
  </nav>

  <main class="container py-5">
    <!-- Job Summary -->
    <div class="card summary-card mb-4">
      <div class="card-body">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
          <div>
            <h2 class="fw-bold mb-2">Matching for: <%= job.job_name %></h2>
            <div class="d-flex flex-wrap gap-2">
              <span class="summary-pill">Job Types: <%= job.job_types || '—' %></span>
              <span class="summary-pill">Contact: <%= job.contact_number || '—' %></span>
            </div>
          </div>
          <div class="text-end">
            <div class="small text-secondary-emphasis" style="opacity:.85;">
              Recommended = unemployed + occupation matches job type
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recommended -->
    <div class="card surface mb-4">
      <div class="card-header bg-success text-white fw-semibold" style="border-top-left-radius:18px;border-top-right-radius:18px;">
        Recommended Beneficiaries
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
              <tr>
                <th style="width: 70px;">#</th>
                <th>Name</th>
                <th style="width: 170px;">Employment</th>
                <th style="width: 140px;">Occupation ID</th>
                <th style="width: 160px;">Contact</th>
                <th class="text-end" style="width: 520px;">Create Match</th>
              </tr>
            </thead>
            <tbody>
              <% if (!recommended || !recommended.length) { %>
                <tr>
                  <td colspan="6" class="text-center py-5 text-muted">
                    No recommended beneficiaries found.
                  </td>
                </tr>
              <% } else { %>
                <% recommended.forEach((b, idx) => { %>
                  <tr>
                    <td><%= idx + 1 %></td>
                    <td class="fw-semibold"><%= b.beneficiary_name %></td>
                    <td><span class="badge bg-warning text-dark"><%= b.employment_status %></span></td>
                    <td><%= b.occupation_id %></td>
                    <td><%= b.contact_no || '—' %></td>
                    <td class="text-end">
                      <form class="row g-2 justify-content-end" method="POST" action="/jobmatching/<%= job.id %>/match/<%= b.id %>">
                        <div class="col-12 col-lg-3 text-start">
                          <label class="form-label">Role in Company</label>
                          <input type="text" name="role_in_company" class="form-control" placeholder="Optional" />
                        </div>
                        <div class="col-12 col-lg-3 text-start">
                          <label class="form-label">Employment Start Date</label>
                          <input type="date" name="employment_start_date" class="form-control" />
                        </div>
                        <div class="col-12 col-lg-4 text-start">
                          <label class="form-label">Remarks</label>
                          <input type="text" name="remarks" class="form-control" placeholder="Optional" />
                        </div>
                        <div class="col-12 col-lg-2 d-grid align-self-end">
                          <button type="submit" class="btn btn-success btn-pill">Match</button>
                        </div>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Others -->
    <div class="card surface">
      <div class="card-header bg-secondary text-white fw-semibold" style="border-top-left-radius:18px;border-top-right-radius:18px;">
        Other Beneficiaries
      </div>
      <div class="card-body">
        <div class="text-muted small mb-3">
          Note: “Employed” beneficiaries are hidden here as requested.
        </div>

        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
              <tr>
                <th style="width: 70px;">#</th>
                <th>Name</th>
                <th style="width: 170px;">Employment</th>
                <th style="width: 140px;">Occupation ID</th>
                <th style="width: 160px;">Contact</th>
                <th class="text-end" style="width: 520px;">Create Match</th>
              </tr>
            </thead>
            <tbody>
              <% if (!others || !others.length) { %>
                <tr>
                  <td colspan="6" class="text-center py-5 text-muted">
                    No other beneficiaries found.
                  </td>
                </tr>
              <% } else { %>
                <% others.forEach((b, idx) => { %>
                  <tr>
                    <td><%= idx + 1 %></td>
                    <td class="fw-semibold"><%= b.beneficiary_name %></td>
                    <td><span class="badge bg-info text-dark"><%= b.employment_status %></span></td>
                    <td><%= b.occupation_id %></td>
                    <td><%= b.contact_no || '—' %></td>
                    <td class="text-end">
                      <form class="row g-2 justify-content-end" method="POST" action="/jobmatching/<%= job.id %>/match/<%= b.id %>">
                        <div class="col-12 col-lg-3 text-start">
                          <label class="form-label">Role in Company</label>
                          <input type="text" name="role_in_company" class="form-control" placeholder="Optional" />
                        </div>
                        <div class="col-12 col-lg-3 text-start">
                          <label class="form-label">Employment Start Date</label>
                          <input type="date" name="employment_start_date" class="form-control" />
                        </div>
                        <div class="col-12 col-lg-4 text-start">
                          <label class="form-label">Remarks</label>
                          <input type="text" name="remarks" class="form-control" placeholder="Optional" />
                        </div>
                        <div class="col-12 col-lg-2 d-grid align-self-end">
                          <button type="submit" class="btn btn-success btn-pill">Match</button>
                        </div>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>