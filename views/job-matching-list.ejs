<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Job Matching</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body { background: radial-gradient(circle at top left, #e3f2fd, #f5f7fb); min-height: 100vh; }
    .app-header { backdrop-filter: blur(8px); background: rgba(15, 23, 42, 0.92); }
    .surface { border: none; border-radius: 18px; box-shadow: 0 18px 40px rgba(15, 23, 42, 0.12); }
    .btn-pill { border-radius: 999px; }
    .table thead th { border-bottom: none; }
    .table-hover tbody tr:hover { background: #f2f5ff; }
    .chip {
      display: inline-flex; align-items: center; gap: .4rem;
      background: #e3f2fd; color: #0d47a1; border-radius: 999px;
      padding: .25rem .7rem; font-size: .8rem;
      border: 1px solid rgba(13,71,161,0.15);
    }
    .chip::before { content: "●"; font-size: .7rem; opacity: .8; }
  </style>
</head>

<body>
  <nav class="navbar navbar-dark app-header shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-semibold" href="/dashboard">NGO Digital Dashboard</a>
      <div class="d-flex gap-2">
        <a href="/dashboard" class="btn btn-outline-light btn-sm btn-pill">Dashboard</a>
        <a href="/logout" class="btn btn-outline-light btn-sm btn-pill">Sign Out</a>
      </div>
    </div>
  </nav>

  <main class="container py-5">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
      <div>
        <h1 class="fw-bold mb-1">Job Matching</h1>
        <p class="text-muted mb-0">Select a job provider to view recommended beneficiaries and create matches.</p>
      </div>
    </div>

    <div class="card surface">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
          <div class="text-muted small">Showing all job providers with job types.</div>
          <a href="/jobproviders/view" class="btn btn-outline-secondary btn-sm btn-pill">Manage Providers</a>
        </div>

        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
              <tr>
                <th style="width: 70px;">#</th>
                <th>Job Name</th>
                <th style="width: 180px;">Contact</th>
                <th>Job Types</th>
                <th class="text-end" style="width: 140px;">Action</th>
              </tr>
            </thead>
            <tbody>
              <% if (!jobs || !jobs.length) { %>
                <tr>
                  <td colspan="5" class="text-center py-5 text-muted">
                    No jobs found.
                  </td>
                </tr>
              <% } else { %>
                <% jobs.forEach((job, idx) => { %>
                  <tr>
                    <td><%= idx + 1 %></td>
                    <td class="fw-semibold"><%= job.job_name %></td>
                    <td><%= job.contact_number || '-' %></td>
                    <td>
                      <span class="chip"><%= job.job_types || '—' %></span>
                    </td>
                    <td class="text-end">
                      <a href="/jobmatching/<%= job.id %>" class="btn btn-primary btn-sm btn-pill">
                        View Matches
                      </a>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>