<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Beneficiaries</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <script>
    window.history.forward();
    function noBack() { window.history.forward(); }
  </script>

  <style>
    body { background: radial-gradient(circle at top left, #e3f2fd, #f5f7fb); min-height: 100vh; }
    .app-header { backdrop-filter: blur(8px); background: rgba(15, 23, 42, 0.92); }
    .surface { border: none; border-radius: 18px; box-shadow: 0 18px 40px rgba(15, 23, 42, 0.12); }
    .btn-pill { border-radius: 999px; }
    .table thead th { border-bottom: none; }
    .table-hover tbody tr:hover { background: #f2f5ff; }
    .mono { font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }
    .avatar {
      width: 38px; height: 38px; border-radius: 12px;
      background: rgba(37,99,235,0.10);
      color: #1d4ed8;
      display: inline-flex; align-items: center; justify-content: center;
      font-weight: 700;
      border: 1px solid rgba(37,99,235,0.15);
    }
    .soft-badge {
      border-radius: 999px;
      padding: .25rem .7rem;
      font-size: .8rem;
      border: 1px solid rgba(148,163,184,0.35);
      background: rgba(255,255,255,0.65);
      color: #0f172a;
    }
    .empty-state {
      padding: 3rem 1rem;
      text-align: center;
      color: #6c757d;
    }
    .empty-icon {
      font-size: 2.2rem;
      margin-bottom: .75rem;
    }
    .search-input {
      border-radius: 12px;
    }
  </style>
</head>

<body onload="noBack();" onpageshow="if (event.persisted) noBack();" onunload="">
  <!-- Top App Bar -->
  <nav class="navbar navbar-dark app-header shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-semibold" href="/dashboard">NGO Digital Dashboard</a>
      <div class="d-flex gap-2">
        <a href="/beneficiaries/menu" class="btn btn-outline-light btn-sm btn-pill">Back</a>
        <a href="/logout" class="btn btn-outline-light btn-sm btn-pill">Sign Out</a>
      </div>
    </div>
  </nav>

  <main class="container py-5">
    <!-- Title Row -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
      <div>
        <h1 class="fw-bold mb-1">Beneficiaries</h1>
        <p class="text-muted mb-0">Search and review beneficiary profiles.</p>
      </div>
      <div class="d-flex gap-2">
        <a href="/beneficiaries/add" class="btn btn-primary btn-pill">Add Beneficiary</a>
      </div>
    </div>

    <!-- Search & Filter Card -->
    <div class="card surface mb-4">
      <div class="card-body">
        <form method="GET" action="/beneficiaries/view" id="filterForm">
          <div class="row g-3">
            <!-- Name Search -->
            <div class="col-12 col-md-6 col-lg-4">
              <label class="form-label small fw-semibold">Beneficiary Name</label>
              <input
                type="text"
                name="search"
                class="form-control search-input"
                placeholder="Search by nameâ€¦"
                value="<%= searchQuery %>"
              />
            </div>

            <!-- Gender Filter -->
            <div class="col-12 col-md-6 col-lg-4">
              <label class="form-label small fw-semibold">Gender</label>
              <select name="gender" class="form-select search-input">
                <option value="">All Genders</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
              </select>
            </div>

            <!-- Marital Status Filter -->
            <div class="col-12 col-md-6 col-lg-4">
              <label class="form-label small fw-semibold">Marital Status</label>
              <select name="marital_status" class="form-select search-input">
                <option value="">All Status</option>
                <option value="Single">Single</option>
                <option value="Married">Married</option>
                <option value="Divorced">Divorced</option>
                <option value="Widowed">Widowed</option>
              </select>
            </div>

            <!-- Education Filter -->
            <div class="col-12 col-md-6 col-lg-4">
              <label class="form-label small fw-semibold">Education</label>
              <input
                type="text"
                name="education"
                class="form-control search-input"
                placeholder="Filter by educationâ€¦"
              />
            </div>

            <!-- Location Filter -->
            <div class="col-12 col-md-6 col-lg-4">
              <label class="form-label small fw-semibold">Location</label>
              <input
                type="text"
                name="location"
                class="form-control search-input"
                placeholder="Filter by locationâ€¦"
              />
            </div>

            <!-- Health Status Filter -->
            <div class="col-12 col-md-6 col-lg-4">
              <label class="form-label small fw-semibold">Health Status</label>
              <input
                type="text"
                name="health_status"
                class="form-control search-input"
                placeholder="Filter by health statusâ€¦"
              />
            </div>

            <!-- Stay Type Filter -->
            <div class="col-12 col-md-6 col-lg-4">
              <label class="form-label small fw-semibold">Stay Type</label>
              <input
                type="text"
                name="stay_type"
                class="form-control search-input"
                placeholder="Filter by stay typeâ€¦"
              />
            </div>

            <!-- Age Range -->
            <div class="col-12 col-md-6 col-lg-4">
              <label class="form-label small fw-semibold">Min Age</label>
              <input
                type="number"
                name="min_age"
                class="form-control search-input"
                placeholder="Min age"
                min="0"
              />
            </div>

            <div class="col-12 col-md-6 col-lg-4">
              <label class="form-label small fw-semibold">Max Age</label>
              <input
                type="number"
                name="max_age"
                class="form-control search-input"
                placeholder="Max age"
                min="0"
              />
            </div>

            <!-- Action Buttons -->
            <div class="col-12">
              <div class="d-flex gap-2 justify-content-end">
                <a href="/beneficiaries/view" class="btn btn-outline-secondary btn-pill">Clear Filters</a>
                <button type="submit" class="btn btn-dark btn-pill">Apply Filters</button>
              </div>
            </div>
          </div>
        </form>

        <div class="d-flex justify-content-between flex-wrap gap-2 mt-3">
          <div class="text-muted small">
            Tip: Use multiple filters to narrow down results.
          </div>
          <div class="soft-badge">
            Results: <span class="fw-semibold"><%= beneficiaries ? beneficiaries.length : 0 %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Table Card -->
    <div class="card surface">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
              <tr>
                <th style="width:50px;">#</th>
                <th>Name</th>
                <th>Guardian</th>
                <th style="width:60px;">Age</th>
                <th style="width:90px;">Gender</th>
                <th>Education</th>
                <th style="width:110px;">Marital Status</th>
                <th style="width:90px;">Children</th>
                <th>Location</th>
                <th>Health Status</th>
                <th>Occupation</th>
                <th style="width:120px;">Contact</th>
                <th>Reference</th>
                <th style="width:100px;">Stay Type</th>
                <th>Remarks</th>
                <th style="width:100px;">Photo</th>
              </tr>
            </thead>
            <tbody>
              <% if (!beneficiaries || beneficiaries.length === 0) { %>
                <tr>
                  <td colspan="16">
                    <div class="empty-state">
                      <div class="empty-icon">ðŸ”Ž</div>
                      <div class="fw-semibold mb-1">No beneficiaries found</div>
                      <div class="small">Try a different search term, or add a new beneficiary.</div>
                      <div class="mt-3">
                        <a href="/beneficiaries/add" class="btn btn-primary btn-pill btn-sm">Add Beneficiary</a>
                        <a href="/beneficiaries/menu" class="btn btn-outline-secondary btn-pill btn-sm ms-2">Back</a>
                      </div>
                    </div>
                  </td>
                </tr>
              <% } else { %>
                <% beneficiaries.forEach((b, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>

                    <td>
                      <div class="d-flex align-items-center gap-2">
                        <div class="avatar">
                          <%= (b.beneficiary_name || 'B').trim().charAt(0).toUpperCase() %>
                        </div>
                        <div>
                          <div class="fw-semibold"><%= b.beneficiary_name %></div>
                          <div class="text-muted small mono">ID: <%= b.id %></div>
                        </div>
                      </div>
                    </td>

                    <td><%= b.guardian_name || '-' %></td>
                    <td><%= (b.age === null || typeof b.age === 'undefined') ? '-' : b.age %></td>
                    <td><%= b.gender || '-' %></td>
                    <td><%= b.education || '-' %></td>
                    <td><%= b.marital_status || '-' %></td>
                    <td><%= (b.children_count === null || typeof b.children_count === 'undefined') ? '-' : b.children_count %></td>
                    <td><%= b.location || '-' %></td>
                    <td><%= b.health_status || '-' %></td>
                    <td>
                      <% if (b.occupation_id || b.occupation_place) { %>
                        <div class="small">
                          <% if (b.occupation_id) { %><div><%= b.occupation_id %></div><% } %>
                          <% if (b.occupation_place) { %><div class="text-muted"><%= b.occupation_place %></div><% } %>
                        </div>
                      <% } else { %>
                        -
                      <% } %>
                    </td>
                    <td class="mono"><%= b.contact_no || '-' %></td>
                    <td>
                      <% if (b.reference_name || b.reference_address) { %>
                        <div class="small">
                          <% if (b.reference_name) { %><div><%= b.reference_name %></div><% } %>
                          <% if (b.reference_address) { %><div class="text-muted"><%= b.reference_address %></div><% } %>
                        </div>
                      <% } else { %>
                        -
                      <% } %>
                    </td>
                    <td><%= b.stay_type || '-' %></td>
                    <td><%= b.remarks || '-' %></td>

                    <td>
                      <% if (b.photo) { %>
                        <a class="btn btn-outline-primary btn-sm btn-pill"
                           href="/beneficiaries/photo/<%= b.id %>"
                           download>
                          Download
                        </a>
                      <% } else { %>
                        <span class="text-muted">N/A</span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Footer Actions -->
    <div class="d-flex justify-content-center mt-4">
      <a href="/beneficiaries/menu" class="btn btn-outline-secondary btn-pill">Back to Beneficiary Menu</a>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>