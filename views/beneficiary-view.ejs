<!DOCTYPE html>
<html lang="en">
<head>
    <title>View Beneficiaries</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <script>
        window.history.forward();
        function noBack() { window.history.forward(); }
    </script>
</head>

<body onload="noBack();" onpageshow="if (event.persisted) noBack();" onunload="">
<body class="bg-light">

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Beneficiaries List</h2>
        <!-- Logout Button -->
        <a href="/logout" class="btn btn-danger">Logout</a>
    </div>

    <!-- Search Form -->
    <form method="GET" action="/beneficiaries/view" class="mb-4">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Search by Name" value="<%= searchQuery %>">
            <button class="btn btn-primary">Search</button>
        </div>
    </form>

    <!-- Beneficiaries Table -->
    <table class="table table-bordered table-striped bg-white">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Guardian</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Location</th>
                <th>Contact</th>
                <th>Photo</th>
            </tr>
        </thead>
        <tbody>
            <% if (beneficiaries.length === 0) { %>
                <tr>
                    <td colspan="8" class="text-center">No records found.</td>
                </tr>
            <% } %>

            <% beneficiaries.forEach((b, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= b.beneficiary_name %></td>
                    <td><%= b.guardian_name %></td>
                    <td><%= b.age %></td>
                    <td><%= b.gender %></td>
                    <td><%= b.location %></td>
                    <td><%= b.contact_no %></td>
                    <td>
                        <% if (b.photo) { %>
                            <a href="/beneficiaries/photo/<%= b.id %>" download>Download</a>
                        <% } else { %>
                            N/A
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<div class="d-flex justify-content-center mt-3">
    <a href="/beneficiaries/menu" class="btn btn-outline-secondary me-2 btn-lg">Back</a>
</div>

</div>

</body>
</html>
