<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Beneficiaries</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <script>
    window.history.forward();
    function noBack() { window.history.forward(); }
  </script>

  <style>
    body { background: radial-gradient(circle at top left, #e3f2fd, #f5f7fb); min-height: 100vh; }
    .app-header { backdrop-filter: blur(8px); background: rgba(15, 23, 42, 0.92); }
    .surface { border: none; border-radius: 18px; box-shadow: 0 18px 40px rgba(15, 23, 42, 0.12); }
    .btn-pill { border-radius: 999px; }
    .table thead th { border-bottom: none; }
    .table-hover tbody tr:hover { background: #f2f5ff; }
    .mono { font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; }
    .avatar {
      width: 38px; height: 38px; border-radius: 12px;
      background: rgba(37,99,235,0.10);
      color: #1d4ed8;
      display: inline-flex; align-items: center; justify-content: center;
      font-weight: 700;
      border: 1px solid rgba(37,99,235,0.15);
    }
    .soft-badge {
      border-radius: 999px;
      padding: .25rem .7rem;
      font-size: .8rem;
      border: 1px solid rgba(148,163,184,0.35);
      background: rgba(255,255,255,0.65);
      color: #0f172a;
    }
    .empty-state {
      padding: 3rem 1rem;
      text-align: center;
      color: #6c757d;
    }
    .empty-icon {
      font-size: 2.2rem;
      margin-bottom: .75rem;
    }
    .search-input {
      border-radius: 12px;
    }
  </style>
</head>

<body onload="noBack();" onpageshow="if (event.persisted) noBack();" onunload="">
  <!-- Top App Bar -->
  <nav class="navbar navbar-dark app-header shadow-sm">
    <div class="container">
      <a class="navbar-brand fw-semibold" href="/dashboard">NGO Digital Dashboard</a>
      <div class="d-flex gap-2">
        <a href="/beneficiaries/menu" class="btn btn-outline-light btn-sm btn-pill">Back</a>
        <a href="/logout" class="btn btn-outline-light btn-sm btn-pill">Sign Out</a>
      </div>
    </div>
  </nav>

  <main class="container py-5">
    <!-- Title Row -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
      <div>
        <h1 class="fw-bold mb-1">Beneficiaries</h1>
        <p class="text-muted mb-0">Search and review beneficiary profiles.</p>
      </div>
      <div class="d-flex gap-2">
        <a href="/beneficiaries/add" class="btn btn-primary btn-pill">Add Beneficiary</a>
      </div>
    </div>

    <!-- Search Card -->
    <div class="card surface mb-4">
      <div class="card-body">
        <form method="GET" action="/beneficiaries/view" class="row g-2 align-items-center">
          <div class="col-12 col-md-9">
            <input
              type="text"
              name="search"
              class="form-control search-input"
              placeholder="Search by beneficiary nameâ€¦"
              value="<%= searchQuery %>"
            />
          </div>
          <div class="col-12 col-md-3 d-grid">
            <button class="btn btn-dark btn-pill">Search</button>
          </div>
        </form>

        <div class="d-flex justify-content-between flex-wrap gap-2 mt-3">
          <div class="text-muted small">
            Tip: try searching by partial name.
          </div>
          <div class="soft-badge">
            Results: <span class="fw-semibold"><%= beneficiaries ? beneficiaries.length : 0 %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Table Card -->
    <div class="card surface">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
              <tr>
                <th style="width:70px;">#</th>
                <th>Name</th>
                <th>Guardian</th>
                <th style="width:90px;">Age</th>
                <th style="width:120px;">Gender</th>
                <th>Location</th>
                <th style="width:150px;">Contact</th>
                <th style="width:140px;">Photo</th>
              </tr>
            </thead>
            <tbody>
              <% if (!beneficiaries || beneficiaries.length === 0) { %>
                <tr>
                  <td colspan="8">
                    <div class="empty-state">
                      <div class="empty-icon">ðŸ”Ž</div>
                      <div class="fw-semibold mb-1">No beneficiaries found</div>
                      <div class="small">Try a different search term, or add a new beneficiary.</div>
                      <div class="mt-3">
                        <a href="/beneficiaries/add" class="btn btn-primary btn-pill btn-sm">Add Beneficiary</a>
                        <a href="/beneficiaries/menu" class="btn btn-outline-secondary btn-pill btn-sm ms-2">Back</a>
                      </div>
                    </div>
                  </td>
                </tr>
              <% } else { %>
                <% beneficiaries.forEach((b, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>

                    <td>
                      <div class="d-flex align-items-center gap-2">
                        <div class="avatar">
                          <%= (b.beneficiary_name || 'B').trim().charAt(0).toUpperCase() %>
                        </div>
                        <div>
                          <div class="fw-semibold"><%= b.beneficiary_name %></div>
                          <div class="text-muted small mono">ID: <%= b.id %></div>
                        </div>
                      </div>
                    </td>

                    <td><%= b.guardian_name || '-' %></td>
                    <td><%= (b.age === null || typeof b.age === 'undefined') ? '-' : b.age %></td>
                    <td><%= b.gender || '-' %></td>
                    <td><%= b.location || '-' %></td>
                    <td class="mono"><%= b.contact_no || '-' %></td>

                    <td>
                      <% if (b.photo) { %>
                        <a class="btn btn-outline-primary btn-sm btn-pill"
                           href="/beneficiaries/photo/<%= b.id %>"
                           download>
                          Download
                        </a>
                      <% } else { %>
                        <span class="text-muted">N/A</span>
                      <% } %>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Footer Actions -->
    <div class="d-flex justify-content-center mt-4">
      <a href="/beneficiaries/menu" class="btn btn-outline-secondary btn-pill">Back to Beneficiary Menu</a>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>